<!DOCTYPE html>
<html>
<head>
  <title></title>
</head>
<body>
    <div>Device list:</div>
    <table border="1">
      <tr>
        <th>Id</th>
        <th>Device</th>
        <th>Class</th>
        <th></th>
      </tr>

      <% @devices.each do |device| %>
          <tr>
            <td><%= device.id %></td>
            <td><%= device.name %></td>
            <td><%= device.class.name %></td>
            <td><%= link_to("details", :action => "edit", :id => device.id) %></td>
          </tr>
      <% end %>
    </table>

    <br>
    <%= form_tag("/devices/new", :method => "get") do %>
    <%= select(:device, :type, @devices_list) %>
    <%= text_field(:device, :name) %>
    <%= submit_tag("Add device") %>
    <% end %>

</body>
</html>