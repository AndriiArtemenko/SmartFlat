<!DOCTYPE html>
<html>
<head>
  <title><%= @report.name %></title>
</head>
<body>
<h2><%= @report.name %>(<%= @report.id %>):</h2>

<div  style="width: 50%">
  <table class="table table-hover">
    <tr>
      <td>Source</td>
      <td><%= @report.sources %></td>
    </tr>
    <tr>
      <td>Type</td>
      <td><%= @report.message_template == nil ? "None" : @report.message_template.type %></td>
    </tr>
    <tr>
      <td>Address</td>
      <% if(current_user.email!=User.guest_user) %>
          <td><%= @report.message_template == nil ? "None" : @report.message_template.address %></td>
      <% else %>
          <td>Not allowed for guests.</td>
      <% end %>
    </tr>
    <tr>
      <td>Subject</td>
      <td><%= @report.message_template == nil ? "None" : @report.message_template.subject %></td>
    </tr>
    <tr>
      <td>Body</td>
      <td><%= text_area_tag :message_body,  @report.message_template.body, :size =>"100x10", :readonly => true %></td>

    </tr>
  </table>

</div>
</body>
</html>

